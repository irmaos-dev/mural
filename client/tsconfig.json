{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "~1app": ["./1app"],
      "~1app/*": ["./1app/*"],

      "~2pages": ["./2pages"],
      "~2pages/*": ["./2pages/*"],

      "~3widgets": ["./3widgets"],
      "~3widgets/*": ["./3widgets/*"],

      "~4features": ["./4features"],
      "~4features/*": ["./4features/*"],

      "~5entities": ["./5entities"],
      "~5entities/*": ["./5entities/*"],

      "~6shared": ["./6shared"],
      "~6shared/*": ["./6shared/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
